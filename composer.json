{
    "name": "benconda/collection",
    "type": "library",
    "license": "MIT",
    "description": "Just another collection library, powered by generators, using static analysis generics and easily extendable",
    "autoload": {
        "psr-4": {
            "BenConda\\Collection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BenCondaTest\\Collection\\": "tests/unit"
        }
    },
    "authors": [
        {
            "name": "Benoit Condaminet",
            "email": "benoit@condami.net"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan",
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "check-code-style": "vendor/bin/php-cs-fixer fix --dry-run --diff && vendor/bin/phpstan"
    }
}
